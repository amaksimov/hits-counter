{
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "extends": "airbnb",
    "plugins": [
        "mocha"
    ],
    "rules": {
        "indent": [
            "error",
            4
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
        "mocha/no-exclusive-tests": "error"
    }
}
